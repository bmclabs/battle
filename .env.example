# Solana Cluster Configuration
# Set to 'mainnet-beta' to use mainnet, or 'devnet' for development
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Solana Program IDs
NEXT_PUBLIC_PROGRAM_ID=your-program-id

# RPC Provider Configuration (Server-side only, not exposed to client)
# Helius API key (REQUIRED for mainnet usage)
HELIUS_API_KEY=your-helius-api-key
# QuickNode API key (optional alternative)
QUICKNODE_API_KEY=your-quicknode-api-key

# Public RPC URLs (optional, no API keys)
NEXT_PUBLIC_DEVNET_RPC_URL=https://api.devnet.solana.com

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3080
NEXT_PUBLIC_ARENA_SECRET_KEY=your-arena-secret-key

# Battle Arena Configuration
NEXT_PUBLIC_BATTLE_ARENA_URL=https://player.twitch.tv/?channel=battlememecoinclub&parent=localhost

# Maintenance Mode
NEXT_PUBLIC_IS_MAINTENANCE=false
NEXT_PUBLIC_SCHEDULED_MAINTENANCE=false 